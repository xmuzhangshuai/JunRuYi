<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <include layout="@layout/top_navigation" />

    <RelativeLayout
        android:id="@+id/rl_switch_warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sel_color_white_gray" >

        <TextView
            android:id="@+id/inform_text"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginBottom="@dimen/new_msg"
            android:layout_marginTop="@dimen/new_msg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/motify_data_space"
            android:text="报警免打扰"
            android:textSize="14sp"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/iv_switch_open_warn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/motify_data_space"
            android:src="@drawable/open_icon"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_switch_close_warn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/motify_data_space"
            android:src="@drawable/close_icon"
            android:visibility="invisible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_below="@+id/inform_text"
            android:background="@color/system_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_switch_notificatoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sel_color_white_gray" >

        <TextView
            android:id="@+id/notificatoin_text"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginBottom="@dimen/new_msg"
            android:layout_marginTop="@dimen/new_msg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/motify_data_space"
            android:text="消息通知"
            android:textSize="14sp"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/iv_switch_open_notification"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/motify_data_space"
            android:src="@drawable/open_icon"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_switch_close_notification"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/motify_data_space"
            android:src="@drawable/close_icon"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_below="@+id/notificatoin_text"
            android:background="@color/system_gray" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/setting_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/sel_color_white_gray"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_marginBottom="@dimen/new_msg"
            android:layout_marginTop="@dimen/new_msg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/motify_data_space"
            android:text="使用介绍"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@color/system_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sel_color_white_gray"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_marginBottom="@dimen/new_msg"
            android:layout_marginTop="@dimen/new_msg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/motify_data_space"
            android:text="版本检测"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@color/system_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sel_color_white_gray"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_marginBottom="@dimen/new_msg"
            android:layout_marginTop="@dimen/new_msg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/motify_data_space"
            android:text="关于君儒艺"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@color/system_gray" />
    </LinearLayout>

</LinearLayout>